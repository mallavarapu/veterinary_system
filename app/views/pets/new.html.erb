<div class="row">
  <div class="col-md-5">
    <h1>New Pet</h1>
    <%= form_for [@customer, @pet] do |f| %>
      <div class="form-group">
        <%= f.label 'Name' %>
        <%= f.text_field :name, required: true, placeholder: "Name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Pet type' %>
        <%= f.select :pet_type, options_for_select(@pet_types), {}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label 'Breed' %>
        <%= f.text_field :breed, required: true, placeholder: 'Breed', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Age' %>
        <%= f.text_field :age, required: true, placeholder: 'Age', type: 'number', min: 1, max: 100, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Weight' %>
        <%= f.text_field :weight, required: true, placeholder: 'Weight in pounds', type: 'number', min: 1, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Last visit' %>
        <%= f.text_field :last_visit, required: true, placeholder: 'Last visit', type: 'date', max: Date.today, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
