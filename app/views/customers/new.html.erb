<div class="row">
  <div class="col-md-5">
    <h1>New Customer</h1>
    <%= form_for @customer do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, placeholder: "Name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, required: true, placeholder: "Email", type: "email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
